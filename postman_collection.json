{
  "info": {
    "name": "SkillForge API",
    "description": "Kisúj SkillForge Laravel REST API - Sanctum Auth + Challenges CRUD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Új Felhasználó\",\n  \"email\": \"ujuser@example.com\",\n  \"password\": \"secret123\",\n  \"password_confirmation\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Challenges",
      "item": [
        {
          "name": "List Challenges",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/challenges",
              "host": ["{{base_url}}"],
              "path": ["challenges"]
            }
          },
          "response": []
        },
        {
          "name": "Get Challenge by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/challenges/1",
              "host": ["{{base_url}}"],
              "path": ["challenges", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Challenge",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Új kihívás\",\n  \"category\": \"CODE\",\n  \"difficulty\": \"MEDIUM\",\n  \"reward_points\": 100,\n  \"start_date\": \"2026-01-15\",\n  \"end_date\": \"2026-02-15\",\n  \"is_active\": true,\n  \"description\": \"Ez egy teszt kihívás\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/challenges",
              "host": ["{{base_url}}"],
              "path": ["challenges"]
            }
          },
          "response": []
        },
        {
          "name": "Update Challenge",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Módosított kihívás cím\",\n  \"reward_points\": 150\n}"
            },
            "url": {
              "raw": "{{base_url}}/challenges/1",
              "host": ["{{base_url}}"],
              "path": ["challenges", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Challenge",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/challenges/1",
              "host": ["{{base_url}}"],
              "path": ["challenges", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
